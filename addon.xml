<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.streama" version="0.0.1" name="Streama" provider-name="HackerspaceBielefeld">
    <requires>
        <import addon="xbmc.python" version="2.25.0"/>
        <import addon="script.module.simplecache" version="1.0.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Host your own Streaming Application with your media library. Use this plugin to acces it from Kodi.</summary>
        <description lang="en_GB">Ever had a huge bookshelf full of shows and movies? Ever wanted to digitalize them, but didn't have a good way of organizing the files? Worry no more! Streama is your own personal Netflx for just such a purpose!
        </description>
        <platform>all</platform>
        <license>MIT</license>
        <source>https://github.com/HackerspaceBielefeld/plugin.video.streama</source>
        <website>http://github.com/HackerspaceBielefeld/plugin.video.streama</website>
        <forum>https://forum.kodi.tv/showthread.php?tid=320484</forum>
        <news></news>
        <assets>
            <icon>resources/images/icon.png</icon>
            <fanart>resources/images/fanart.jpg</fanart>
            <screenshot>resources/images/screenshot01.png</screenshot>
            <screenshot>resources/images/screenshot02.png</screenshot>
        </assets>
    </extension>
</addon>
